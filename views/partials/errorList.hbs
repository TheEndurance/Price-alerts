{{#if errors}}
  <div class="alert alert-dismissible alert-danger">
    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    {{#if headingMsg}}
      <h4 class="alert-heading">{{headingMsg}}</h4>
    {{/if}}
    <ul>
      {{#each errors}}
        <li>{{this.msg}}</li>
      {{/each}}
    </ul>
  </div>
{{/if}}